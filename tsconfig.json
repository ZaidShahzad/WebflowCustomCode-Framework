{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true, // Consider enabling this if you have .js files in your project you want to include
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true // This ensures all files can be transpiled independently, important for Babel usage
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
